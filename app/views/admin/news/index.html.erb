<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.content %></td>
    <td><%= news.user_id %></td>
    <td><%= link_to 'Show', admin_news_path(news) %></td>
    <td><%= link_to 'Edit', edit_admin_news_path(news) %></td>
    <td><%= link_to "Destroy", admin_news_path(news), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %></td>
  </tr>
<% end %>
</table>

